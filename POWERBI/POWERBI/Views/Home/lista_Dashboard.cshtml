
@model List<POWERBI.Models.dashboard>
<div id="embedContainer">

    <div style="padding-left:20px;" class="justify-content-center">
        <h2>Dashboard disponibles</h2>

        <table class="table table-bordered table-hover d-table-cell table-responsive">

            <thead>
           
            <td>Nombre del Dashboard</td>
            <td>Id del Dashboard</td>
            <td>Opciones</td>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>@item.nombre</td>
                        <td>@item.id</td>
                        <td>
                            <form action="Dashboard" method="post">
                                <input type="hidden" name="DashboardID" value="@item.id" />
                                <button class="btn btn-xs btn-primary" role="button" type="submit">
                                    <i class="glyphicon glyphicon-credit-card"></i> <span>Ver</span>
                                </button>

                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


